@model ev_01.Models.ViewModels.OrderVM

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col">
        <form asp-action="Edit" asp-controller="Orders" enctype="multipart/form-data" method="post">

            <div class="row mt-4">
                <input asp-for="OrderId" type="hidden"/>
                <input asp-for="Picture" type="hidden"/>
                <div class="col-6 ">
                    <h3>Create New Order</h3>

                    <div class="form-group mb-2">
                        <label asp-for="CustomerName" class="control-label"></label>
                        <input asp-for="CustomerName" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="PictureFile" class="control-label"></label>
                        <input asp-for="PictureFile" class="form-control form-control-sm" />
                        <img src="@Model.Picture" width="34" style="border-radius:30%"/>
                        <span asp-validation-for="PictureFile" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="OrderDate" class="control-label"></label>
                        <input asp-for="OrderDate" class="form-control form-control-sm" type="date" />
                        <span asp-validation-for="OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="TableNumber" class="control-label"></label>
                        <input asp-for="TableNumber" class="form-control form-control-sm" />
                        <span asp-validation-for="TableNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check  mb-2">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AmountPaid" /> @Html.DisplayNameFor(model => model.AmountPaid)
                        </label>
                    </div>
                </div>

                <div class="col-6">
                    <h3 class="d-flex justify-content-center">Select Food</h3>
                    <div class="d-flex justify-content-end">
                        <a href="#" id="btnADD" class="btn btn-dark mb-3">Add Food</a>
                    </div>
                    <div id="foodContainer">

                        @foreach (var item in Model.FoodList)
                        {
                            <script>
                                LoadData(@item);
                            </script>
                        }

                    </div>
                </div>


            </div>



            <div class="d-flex justify-content-center">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link" style="text-decoration:none"><i class="fa fa-arrow-left"></i> Back to List</a>
</div>

