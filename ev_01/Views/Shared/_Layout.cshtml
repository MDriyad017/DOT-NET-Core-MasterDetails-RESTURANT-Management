<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <script>
        function LoadData(FoodId = null) {
            var foodContainer = $("#foodContainer");
            $.ajax({
                url: "/Orders/addNewFood/" + FoodId ?? "",
                type: "GET",
                success: function (data) {
                    foodContainer.append(data);
                }
            });
        }

        $(document).on("click", "#btnADD", function (e) {
            e.preventDefault();
            LoadData();
        });

        $(document).on("click", "#btnDelete", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        });


    </script>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#2b317a;">
            <div class="container-fluid">
                <a href="#" class="navbar-brand">Smart Resturant</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new{}, new{@class="nav-link"})
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Foods", "Index", "Foods", new{}, new{@class="nav-link"})
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Order", "Index", "Orders", new{}, new{@class="nav-link"})
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        
            @RenderBody()

    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/ajax/jquery.unobtrusive-ajax.js"></script>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)


</body>
</html>
